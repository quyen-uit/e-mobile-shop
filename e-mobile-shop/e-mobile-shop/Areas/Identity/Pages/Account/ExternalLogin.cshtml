@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>
<hr />

<p id="external-login-description" class="text-info">
    Bạn đã xác thực thành công với tài khoản <strong>@Model.ProviderDisplayName</strong>.
    Vui lòng nhập email của bạn để hoàn tất đăng ký.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NgaySinh"></label>
                <input type="date" asp-for="Input.NgaySinh" class="form-control" />
                <span asp-validation-for="Input.NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CMND"></label>
                <input asp-for="Input.CMND" class="form-control" />
                <span asp-validation-for="Input.CMND" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DiaChi"></label>
                <input asp-for="Input.DiaChi" class="form-control" />
                <span asp-validation-for="Input.DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SDT"></label>
                <input asp-for="Input.SDT" class="form-control" />
                <span asp-validation-for="Input.SDT" class="text-danger"></span>
            </div>  
            <button type="submit" class="btn btn-primary">Xác nhận đăng kí </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}