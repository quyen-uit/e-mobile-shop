@model List<AspNetUsers>

@{
    ViewData["Title"] = "QuanLyUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <style>
        .dataTables_filter, .dataTables_info {
            display: none;
        }
    </style>
<body>
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class=" panel-heading ">
                <div class="row">
                    <div class="col-lg-6">
                        <h4>Quản lý người dùng</h4>

                    </div>
                    <div class="col-lg-6">
                        <form asp-action="QuanLyUser" method="get" asp-controller="Admin">
                            <div class="input-group custom-search-form">
                                <input name="searchValue" type="text" class="form-control" placeholder="Tìm tên hoặc username ...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100% cellspacing="0">

                        <thead>
                            <tr>
                              
                                <th>Tên</th>
                                <th>Username</th>
                                <th>Giới tính</th>
                                <th>CMND</th>
                                <th >SDT</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td style="vertical-align:middle ">@item.HoTen</td>
                                    <td style="vertical-align:middle">@item.UserName</td>
                                    <td style="vertical-align:middle">@item.GioiTinh</td>
                                    <td style="vertical-align:middle">@item.Cmnd</td>
                                    <td style="vertical-align:middle">@item.PhoneNumber</td>
                                    <td style="vertical-align:middle">@item.Email</td>
                                    <td style="vertical-align:middle">@item.DiaChi</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>


