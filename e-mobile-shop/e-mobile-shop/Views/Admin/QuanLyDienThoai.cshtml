@model List<SanPham>
@{
    ViewData["Title"] = "QuanLyDienThoai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Quản lý điện thoại
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Ảnh</th>
                                <th>Số lượng</th>
                                <th>Đã bán</th>
                                <th>Lượt xem</th>
                                <th>Hãng sãn xuất</th>
                                <th>Giá gốc</th>
                                <th>Giá bán</th>
                                <th>Sửa</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td style="vertical-align:middle">@item.MaSp</td>

                                    <td style="vertical-align:middle">@item.TenSp</td>
                                    <td align="center">
                                        <img src=@Url.Content("~/ProductAvatar/" + item.AnhDaiDien) width="50" height="50" />
                                    </td>
                                    <td style="vertical-align:middle">@item.SoLuong</td>
                                    <td style="vertical-align:middle">0</td>
                                    <td style="vertical-align:middle">@item.SoLuotXemSp</td>
                                    <td style="vertical-align:middle">@item.HangSx</td>
                                    <td style="vertical-align:middle">@item.GiaGoc</td>
                                    <td style="vertical-align:middle">@item.GiaTien</td>
                                    <td style="vertical-align:middle">
                                        <button type="button" class="btn btn-primary">Sửa </button>
                                    </td>
                                    <td style="vertical-align:middle">
                                        <button type="button" class="btn btn-primary">Xóa</button>
                                    </td>
                                </tr>
                            }
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td style="vertical-align:middle">@item.MaSp</td>

                                    <td style="vertical-align:middle">@item.TenSp</td>
                                    <td align="center">
                                        <img src=@Url.Content("~/ProductAvatar/" + item.AnhDaiDien) width="50" height="50" />
                                    </td>
                                    <td style="vertical-align:middle">@item.SoLuong</td>
                                    <td style="vertical-align:middle">0</td>
                                    <td style="vertical-align:middle">@item.SoLuotXemSp</td>
                                    <td style="vertical-align:middle">@item.HangSx</td>
                                    <td style="vertical-align:middle">@item.GiaGoc</td>
                                    <td style="vertical-align:middle">@item.GiaTien</td>
                                    <td style="vertical-align:middle">
                                        <button type="button" class="btn btn-primary">Sửa </button>
                                    </td>
                                    <td style="vertical-align:middle">
                                        <button type="button" class="btn btn-primary">Xóa</button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>